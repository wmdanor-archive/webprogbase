<!DOCTYPE html>
<html>
  {{> head }}
  <body>
    {{> header }}
    <main>
      <form action="/books" method="GET" class="middle_form">
        <input type="text" name="title" style="width: 360px" value="{{title_value}}"><input type="submit" value="Search">
      </form>
      <table>
        <tr>
            <td>Title</td>
            <td>Publishment year</td>
            <td>Added</td>
        </tr>
        {{#books_page}}
        <tr>
            <td><a href="/books/{{id}}">{{title}}</a></td>
            <td>{{publishment_year}}</td>
            <td>{{added}}</td>
        </tr>
        {{/books_page}}
        {{{null_result}}}
      </table>
      <div class="paginator">
        <menu>
          <li class="arrow">{{{prev_page}}}</li>
          {{#pages}}
          <li>{{{.}}}</li>
          {{/pages}}
          <li class="arrow">{{{next_page}}}</li>
        </menu>
      </div>
      <form action="/books/new" method="GET" class="middle_form">
        <input type="submit" value="Create new book">
      </form>
    </main>
    {{> footer }}
  </body>
</html>
